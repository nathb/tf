<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="InputLabel">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:paddingRight">@dimen/torrent_row_horizontal_padding</item>
    </style>

    <style name="InputBox">
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="InputTableRow">
        <item name="android:paddingBottom">@dimen/torrent_row_inner_vertical_padding</item>
    </style>
</resources>
